{
  "$schema": "http://adaptivecards.io/schemas/adaptive-card.json",
  "type": "AdaptiveCard",
  "version": "1.5",
  "body": [
    {
      "type": "Container",
      "style": "attention",
      "bleed": true,
      "items": [
        {
          "type": "TextBlock",
          "text": "ğŸš¨ Merge Commit Detected",
          "weight": "Bolder",
          "size": "ExtraLarge",
          "wrap": true
        },
        {
          "type": "TextBlock",
          "text": "An integration branch has been merged into a feature branch. This requires immediate attention from DevOps.",
          "wrap": true,
          "spacing": "Small"
        }
      ]
    },
    {
      "type": "FactSet",
      "facts": [
        {
          "title": "ğŸ‘¤ Author",
          "value": "@{body('Parse_JSON')?['author']}"
        },
        {
          "title": "ğŸ” Base Branch",
          "value": "@{body('Parse_JSON')?['base']}"
        },
        {
          "title": "ğŸŒ¿ Feature Branch",
          "value": "@{body('Parse_JSON')?['head']}"
        },
        {
          "title": "ğŸ”— Pull Request",
          "value": "[View PR](@{body('Parse_JSON')?['pr_url']})"
        },
        {
          "title": "ğŸ•’ Merge Date",
          "value": "@{body('Parse_JSON')?['merge_date']}"
        }
      ]
    },
    {
      "type": "TextBlock",
      "text": "ğŸ§¾ **Merge Commit Details**",
      "wrap": true,
      "weight": "Bolder",
      "spacing": "Medium"
    },
    {
      "type": "TextBlock",
      "text": "```\n@{body('Parse_JSON')?['merge_info']}\n```",
      "wrap": true",
      "fontType": "Monospace"
    },
    {
      "type": "TextBlock",
      "text": "[ğŸ”— View Merge Commit](@{body('Parse_JSON')?['commit_url']})",
      "wrap": true,
      "spacing": "Small"
    },
    {
      "type": "TextBlock",
      "text": "âš ï¸ **Action Required**: Please revert the merge commit from the feature branch as per release hygiene protocols.",
      "wrap": true,
      "color": "Warning",
